@model TWork.Models.ViewModels.TeamInformationViewModel

@{
    ViewBag.Title = "EditTeam";
}

<div class="panel-body"><h4>Edit Team</h4></div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group">
                <label asp-for="TeamId" class="control-label"></label>
                <input readonly="readonly" asp-for="TeamId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="TeamName" class="control-label"></label>
                <input asp-for="TeamName" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index" asp-controller="TaskStatus" asp-route-teamId="@Model.TeamId">Edit task statuses</a>
    <a class="btn btn-primary" asp-action="Details" asp-route-teamId="@Model.TeamId">Back to List</a>
</div>

