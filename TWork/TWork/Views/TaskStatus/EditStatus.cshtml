@model TaskStatusEditModel

@{
    ViewBag.Title = "EditTaskStatus";
}

<div class="panel-body"><h4>Edit task status</h4></div>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditStatus" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="StatusId" class="form-control" hidden="hidden" />
            <input asp-for="TeamId" class="form-control" hidden="hidden" />
            <div class="form-group">
                <label asp-for="StatusName" class="control-label"></label>
                <input asp-for="StatusName" class="form-control" />
                <span asp-validation-for="StatusName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index" asp-route-teamId="@Model.TeamId">Back to List</a>
</div>

